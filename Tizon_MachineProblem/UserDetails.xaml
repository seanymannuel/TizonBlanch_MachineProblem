<Window x:Class="Tizon_MachineProblem.UserDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tizon_MachineProblem"
        mc:Ignorable="d"
        Title="UserDetails" Height="450" Width="463">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Content="User Details" HorizontalAlignment="Center" FontSize="24" Margin="0,20,0,10"/>

        <!-- User details -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock x:Name="tblFullName" FontWeight="Bold" Margin="0,10,0,5" Text="{Binding FullName}" />
            <TextBlock x:Name="tblUsername" FontWeight="Bold" Margin="0,10,0,5" Text="{Binding Username}" />
            <TextBlock x:Name="tblEmail" FontWeight="Bold" Margin="0,10,0,5" Text="{Binding Email}" />
            <TextBlock x:Name="tblStudentNo" FontWeight="Bold" Margin="0,10,0,5" Text="{Binding StudentNo}" />
            <TextBlock x:Name="tblPassword" FontWeight="Bold" Margin="0,10,0,5" Text="{Binding Password}" />
        </StackPanel>
    </Grid>
</Window>
